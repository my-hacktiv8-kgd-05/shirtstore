	<%- include('refactor/header') %>
		<h1 class="jumbotron text-center text-light p-5 custom-jumbotron">List of shirts</h1>
		<% if (status) { %>
			<div class="alert alert-danger mx-2" role="alert">
				<%= status %>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				  <span aria-hidden="true">&times;</span>
				</button>
			</div>
		<% } %>
		<div class="fluid-container">
			<a href="/shirts/add" class="btn btn-secondary m-2">Add new shirt</a>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Type</th>
						<th>Size</th>
						<th>Stock</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% data.forEach ( shirt => { %>
						<tr>
							<th scope="row"><%= shirt.id %></th>
							<td><%= shirt.name %></td>
							<td><%= shirt.type %></td>
							<td><%= shirt.size %></td>
							<td><%= shirt.stock %> pcs</td>
							<td><a href="/shirts/edit/<%= shirt.id %>" class="btn btn-outline-warning btn-sm">Edit</a> <a href="/shirts/delete/<%= shirt.id %>" class="btn btn-outline-danger btn-sm">Delete</a></td>
						</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	<%- include('refactor/footer') %>